<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
					<form id="contact-form" class="contact-form" data-toggle="validator" novalidate="true">
						<div class="form-group">
							<%= f.input :title,
                          placeholder: 'Title',
                          label: false,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "title", class: "input input__icon form-control" } %>
						</div>

						<div class="form-group">
							<%= f.input :body,
                          placeholder: 'Description',
                          label: false,
                          required: true,
                          autofocus: true,
                          input_html: {  class: "input input__icon form-control", cols:"40", rows: "20"},
                          as: :trix_editor
                          %>
						</div>

						<div class="form-group">
							<%= f.input :image_link,
                          placeholder: 'Image URL',
                          label: false,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "image_link", class: "input input__icon form-control" } %>
						</div>

            <%= f.association :user, as: :hidden %>

						<div class="form-group">
							<%= f.button :submit, "Save", :class=>"btn" %>
              <%= link_to "Back", articles_path, :class=>"btn"%>
						</div>
				</div>
			</div>
			</form>
			<% end %>